{
    "name": "VerneMQ",
    "version": "0.0.16",
    "slug": "vernemq",
    "description": "An MQTT server",
    "arch": ["amd64", "i386", "armhf", "armv7", "aarch64"],
    "url": "https://github.com/alex-savin/hassio-addons/tree/master/vernemq",
    "startup": "services",
    "boot": "auto",
    "ports": {
	"1883/tcp": 1883,
	"8883/tcp": 8883,
	"9001/tcp": 9001,
	"9002/tcp": 9002
    },
    "ports_description": {
	"1883/tcp": "MQTT",
	"8883/tcp": "MQTT SSL",
	"9001/tcp": "WebSockets",
	"9002/tcp": "WebSocket SSL"
    },
    "map": [
	"share",
	"ssl"
    ],
    "docker_api": false,
    "hassio_api": true,
    "hassio_role": "default",
    "homeassistant_api": false,
    "host_network": false,
    "host_ipc": false,
    "host_dbus": false,
    "host_pid": false,
    "auto_uart": false,
    "privileged": [],
    "full_access": false,
    "apparmor": false,
    "audio": false,
    "gpio": false,
    "devicetree": false,
    "stdin": false,
    "legacy": false,
    "options": {
	"log_level": "info",
	"ssl": true,
	"certfile": "fullchain.pem",
	"keyfile": "privkey.pem",
	"broker": true,
	"vernemq": {
	    "node_name": "",
	    "discovery_node": ""
	},
	"allow_anonymous": false,
	"mqttusers": [
	    {
		"username": "",
		"password": "",
		"readonly": true,
		"topics": [
		    "#"
		]
	    }
	]
    },
    "schema": {
	    "log_level": "match(^(trace|debug|info|notice|warning|error|fatal)$)?",
	    "ssl": "bool",
	    "certfile": "str",
	    "keyfile": "str",
	    "broker": "bool",
	    "allow_anonymous": "bool",
	    "vernemq": {
		"node_name": "str",
		"discovery_node": "str"
	    }
	    "mqttusers": [
		{
		    "username": "str",
		    "password": "str",
		    "readonly": "bool",
		    "topics": [
			"str"
		    ]
		}
	]
    },
    "timeout": 20,
    "environment": {
	"LOG_FORMAT": "{LEVEL}: {MESSAGE}"
    },
    "image": "smarthouseint/{arch}-addon-vernemq"
}
