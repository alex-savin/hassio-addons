{
    "name": "VerneMQ",
    "version": "0.0.35",
    "slug": "vernemq",
    "description": "An MQTT server",
    "arch": ["amd64", "i386", "armhf", "armv7", "aarch64"],
    "url": "https://github.com/alex-savin/hassio-addons/tree/master/vernemq",
    "startup": "services",
    "boot": "auto",
    "ports": {
	"1883/tcp": 1883,
	"8883/tcp": 8883,
	"8083/tcp": 8083,
	"8084/tcp": 8084
    },
    "ports_description": {
	"1883/tcp": "MQTT",
	"8883/tcp": "MQTT/SSL",
	"8083/tcp": "WebSockets",
	"8084/tcp": "WebSockets/SSL"
    },
    "map": [
	"share",
	"ssl"
    ],
    "docker_api": false,
    "hassio_api": true,
    "hassio_role": "default",
    "homeassistant_api": false,
    "host_network": false,
    "host_ipc": false,
    "host_dbus": false,
    "host_pid": false,
    "auto_uart": true,
    "privileged": [],
    "full_access": false,
    "apparmor": false,
    "audio": false,
    "gpio": false,
    "devicetree": false,
    "stdin": false,
    "legacy": false,
    "options": {
	"log_level": "info",
	"network_interface": "eth0",
	"ssl": true,
	"cafile": "ca.pem",
	"certfile": "fullchain.pem",
	"keyfile": "privkey.pem",
	"vernemq": {
	    "allow_anonymous": false,
	    "websockets": false,
	    "node_name": "",
	    "discovery_node": ""
	},
	"credentials": [
	    {
		"username": "",
		"password": "",
	    }
	],
	"permissions": [
	    {
		"username": "",
		"topic": "",
		"permission": "write"
	    }
	]
    },
    "schema": {
	"log_level": "match(^(trace|debug|info|notice|warning|error|fatal)$)?",
	"network_interface": "str?",
	"ssl": "bool",
	"cafile": "str?",
	"certfile": "str?",
	"keyfile": "str?",
	"vernemq": {
	    "allow_anonymous": "bool",
	    "websockets": "boot",
	    "node_name": "str?",
	    "discovery_node": "str?"
	},
	"credentials": [
	    {
		"username": "str?",
		"password": "str?"
	    }
	],
	"permissions": [
	    {
		"username": "str",
		"topic": "str",
		"permission": "match(^(read|write)$)"
	    }
	]
    },
    "timeout": 20,
    "environment": {
	"LOG_FORMAT": "{LEVEL}: {MESSAGE}"
    },
    "image": "smarthouseint/{arch}-addon-vernemq"
}
