{
    "name": "RTL433 To MQTT",
    "version": "0.0.5",
    "slug": "rtl4332mqtt",
    "description": "An RTL433 To MQTT Bridge",
    "arch": ["amd64", "i386", "armhf", "armv7", "aarch64"],
    "url": "https://github.com/alex-savin/hassio-addons/tree/master/rtl4332mqtt",
    "startup": "services",
    "boot": "auto",
    "map": [
	"share"
    ],
    "usb": true,
    "auto_uart": true,
    "docker_api": false,
    "hassio_api": true,
    "hassio_role": "default",
    "homeassistant_api": false,
    "host_network": false,
    "host_ipc": false,
    "host_dbus": true,
    "host_pid": false,
    "privileged": [],
    "udev": true,
    "full_access": true,
    "kernel_modules": true,
    "apparmor": false,
    "audio": false,
    "gpio": false,
    "devicetree": false,
    "stdin": false,
    "legacy": false,
    "options":
    {
	"log_level": "info",
	"timezone": "America/New_York",
	"enable_auto_discovery": false,
	"mqtt": {
	    "host": "core-mosquitto",
	    "port": "1883",
	    "username": "username",
	    "password": "password",
	    "retained": true,
	    "qos": 0,
	    "topic": "meters"
	},
	"device_id": 0,
	"protocol": 40,
	"frequency": 319500000,
	"gain": 60,
	"frequency_offset": 350
    },
    "schema":
    {
	"log_level": "match(^(trace|debug|info|notice|warning|error|fatal)$)?",
	"timezone": "str",
	"enable_auto_discovery": "bool",
	"mqtt": {
	    "host": "str",
	    "port": "int",
	    "username": "str",
	    "password": "str",
	    "retained": "bool",
	    "qos": "int",
	    "topic": "str"
	},
	"device_id": "int",
	"protocol": "int",
	"frequency": "int",
	"gain": "int",
	"frequency_offset": "int"
    },
    "timeout": 20,
    "environment": {
	"LOG_FORMAT": "{LEVEL}: {MESSAGE}"
    },
    "image": "smarthouseint/addon-rtl4332mqtt"
}
