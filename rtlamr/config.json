{
    "name": "RTLAMR",
    "version": "0.0.10",
    "slug": "rtlamr",
    "description": "An RTLAMR Smart Meter reader",
    "arch": ["amd64", "i386", "armhf", "armv7", "aarch64"],
    "url": "https://github.com/alex-savin/hassio-addons/tree/master/rtlamr",
    "startup": "services",
    "boot": "auto",
    "map": [
	"share"
    ],
    "usb": true,
    "auto_uart": true,
    "docker_api": false,
    "hassio_api": true,
    "hassio_role": "default",
    "homeassistant_api": false,
    "host_network": false,
    "host_ipc": false,
    "host_dbus": true,
    "host_pid": false,
    "privileged": [],
    "udev": true,
    "full_access": true,
    "kernel_modules": true,
    "apparmor": false,
    "audio": false,
    "gpio": false,
    "devicetree": false,
    "stdin": false,
    "legacy": false,
    "options": {
	"log_level": "info",
	"timezone": "America/New_York",
	"enable_auto_discovery": false,
	"device_id": 0,
	"timezone": "America/New_York",
	"cycle_date": 1,
	"meters": [
	    {
		"id": "1234567890",
		"type": "gas|water|electric",
		"protocol": "r900|scm"
	    }
	],
	"mqtt": {
	    "host": "core-mosquitto",
	    "port": "1883",
	    "username": "",
	    "password": "",
	    "retained": true,
	    "qos": 0,
	    "topic": "meters"
	}
    },
    "schema": {
	"log_level": "match(^(trace|debug|info|notice|warning|error|fatal)$)?",
	"timezone": "str",
	"enable_auto_discovery": "bool",
	"device_id": "int",
	"timezone": "str",
	"cycle_date": "int",
	"meters": [
	    {
		"id": "int",
		"type": "str",
		"protocol": "str"
	    }
	],
	"mqtt": {
	    "host": "str",
	    "port": "int",
	    "username": "str",
	    "password": "str",
	    "retained": "bool",
	    "qos": "int",
	    "topic": "str"
	}
    },
    "timeout": 20,
    "environment": {
	"LOG_FORMAT": "{LEVEL}: {MESSAGE}"
    },
    "image": "smarthouseint/addon-rtlamr2mqtt"
}
